{
  "compilerOptions": {
    "target": "es2015",
    "module": "nodenext",

    "lib": ["es2015", "dom"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "skipLibCheck": true,

    "isolatedModules": true,
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
